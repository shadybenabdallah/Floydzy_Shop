{% extends 'base.html.twig' %}

{% block title %}New Produit{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .company-info {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .company-info:before {
            content: "";
            background-image: url("{{ asset('images/img1.jpg') }}");
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .company-info .content {
            z-index: 1;
        }

        .company-info h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .company-info p {
            font-size: 18px;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
{% endblock %}

{% block body %}
{% include 'nav.html.twig' %}
<div class="company-info">
<div class="container">
    <h1>Create new Produit</h1>

    {{ include('produit/_form.html.twig') }}

    <a href="{{ path('app_produit_index') }}">back to list</a>
    </div>
    </div>
    </div>
{% endblock %}
