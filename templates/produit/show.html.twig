{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container">
        <h1>Produit</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ produit.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ produit.price }}</td>
                </tr>
                <tr>
                    <th>Production_date</th>
                    <td>{{ produit.productionDate ? produit.productionDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Made_in</th>
                    <td>{{ produit.madeIn }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td><img src="{{ asset('images/' ~ produit.photo) }}" alt="Produit Image" style="width:100px"></td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to List</a>

        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
