{% extends 'base.html.twig' %} 

{% block title %}{% endblock %} 

{% block stylesheets %}
    {{ parent() }}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .company-info {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .company-info:before {
            content: "";
            background-image: url("{{ asset('images/img1.jpg') }}");
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .company-info .content {
            z-index: 1;
        }

        .company-info h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        .company-info p {
            font-size: 18px;
            line-height: 1.6;
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
{% endblock %}

{% block body %} 
    {% include 'nav.html.twig' %}
    <div class="company-info">
        <div class="content">
            <h1>Floydzy's shop</h1>
            <p>
                Floydzy's Shop is a premier online destination for video game enthusiasts, offering a wide range of thrilling titles to suit every taste and platform. With a passion for gaming and a commitment to customer satisfaction, Floydzy's Shop aims to be the go-to source for gamers seeking the latest releases, timeless classics, and hidden gems.
            </p>
        </div>
    </div>
{% endblock %}